<article class="article">
    {% if article.image %}
        <img src="{{ article.image | img_url: 'medium' }}" alt="{{ article.title }}" width="300" height="200">
    {% endif %}
    <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
    <p class="article-excerpt">
      {{ article.excerpt | strip_html | truncatewords: 15 }}
      <a href="{{ article.url }}" class="read-more-link">Read more</a>
    </p>
    <p class="article-meta">Posted on {{ article.published_at | date: "%B %d, %Y" }} by {{ article.author }}</p>
</article>
