<section>
    <h1>Collections</h1>
    <ul>
        {% for collection in collections %}
        <li>
            <a href="{{ collection.url }}">
             {% if collection.image %}
                <img src="{{ collection.image | img_url: 'medium' }}" alt="{{ collection.title }}">
            {% endif %}
            <h3>{{ collection.title }}</h3>
            <p>{{ collection.description | truncatewords: 20 }}</p>
            </a>
        </li>
        {% endfor %}
    </ul>
</section>