<article class="article">
    {% if article.image %}
            <img src="{{ article.image | img_url: 'medium' }}" alt="{{ article.title }}">
    {% endif %}
    <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
    <p>{{ article.excerpt }}</p>
    <p class="article-meta">Posted on {{ article.published_at | date: "%B %d, %Y" }} by {{ article.author }}</p>
</article>

{% if article.comments_enabled? and article.comments_count > 0 %}
    <h3>Comments ({{ article.comments_count }})</h3>
{% paginate article.comments by 20 %}
  {% for comment in article.comments %}
    <h4>{{ comment.author }}</h4>
    <p>{{ comment.email }}</p>
    <p>{{ comment.content }}</p>
    <p>{{ comment.created_at }}</p>
  {% endfor %}

  {{ paginate | default_pagination }}
{% endpaginate %}

{% endif %}

<h3>Leave a comment!</h3>
{% form 'new_comment', article %}
  {{ form.errors | default_errors }}

  <div class="name">
    <label for="name">Name</label>
    <input type="text" name="comment[author]" value="{{ form.author }}">
  </div>

    <div class="email">
        <label for="email">Email</label>
        <input type="email" name="comment[email]" value="{{ form.email }}">
    </div>

  <div class="comment">
    <label for="comment">Comment</label>
    <textarea name="comment[body]">{{ form.body }}</textarea>
  </div>

  <div class="submit">
    <input type="submit" value="Post">
  </div>
{% endform %}
